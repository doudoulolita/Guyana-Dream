var tailleTuile = 32;

var ts = new Tileset("tileset-petit.png");

window.onload = function() {

	var canvas = document.getElementById('canvas');

	var ctx = canvas.getContext('2d');

	ts.dessinerTile(1, ctx, tailleTuile, tailleTuile);

	ts.dessinerTile(4, ctx, tailleTuile*3, tailleTuile);

	ts.dessinerTile(5, ctx, tailleTuile*5, tailleTuile*3);

	ts.dessinerTile(8, ctx, tailleTuile*7, tailleTuile*3);

}
